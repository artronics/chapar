<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <param name="Append" value="false"/>
        <file>app.log</file>

        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="PACKET" class="ch.qos.logback.core.FileAppender">
        <param name="Append" value="false"/>
        <file>packets.log</file>

        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="EVENT_FILE" class="ch.qos.logback.core.FileAppender">
        <param name="Append" value="false"/>
        <file>events.log</file>

        <encoder>
            <pattern>%level [%thread] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>

    </appender>

    <appender name="STDOUT-DETAILED" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
        </filter>
    </appender>

    <root level="debug">
    </root>
    <logger name="main" level="debug">
        <appender-ref ref="STDOUT-DETAILED"/>
        <appender-ref ref="FILE" />
    </logger>
    <logger name="stdout" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="packet" level="info">
        <appender-ref ref="PACKET"/>
    </logger>
    <logger name="event" level="info">
        <appender-ref ref="EVENT_FILE"/>
    </logger>
</configuration>