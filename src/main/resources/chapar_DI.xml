<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config />
    <context:component-scan base-package="artronics.chapar"/>

    <bean id="PacketEngineContract" class="artronics.chapar.protocol.MessageBrokerImpl"></bean>

    <bean id="AbstractBaseController" class="artronics.chapar.controller.AbstractBaseController">
        <property name="nodeFactory" ref="NodeFactory"></property>
    </bean>

    <bean id="ChaparServiceInitializer" class="artronics.chapar.core.ChaparServiceInitializer">
        <property name="connection" ref="ConnectionService"></property>
        <property name="protocolEngine" ref="ProtocolEngineService"></property>

    </bean>

    <bean id="RoutingService" class="artronics.chapar.routing.Router"/>
    <bean id="PacketFactory" class="artronics.chapar.packet.BasePacketFactory"/>
    <bean id="NodeFactory" class="artronics.chapar.node.BaseNodeFactory"/>
    <bean id="LinkQualityFactory" class="artronics.chapar.node.LinkQualityFactory"/>

    <bean id="ProtocolEngineService" class="artronics.chapar.protocol.ProtocolEngineImpl">
        <constructor-arg name="dataQueue" ref="DataInOutQueueContract"></constructor-arg>
        <constructor-arg name="packetQueue" ref="PacketInOutQueueContract"></constructor-arg>
        <constructor-arg name="packetFactory" ref="PacketFactory"></constructor-arg>
    </bean>
    <bean id="PacketProtocol" class="artronics.chapar.protocol.PacketProtocolImp"/>

    <bean id="DataInOutQueueContract" class="artronics.chapar.queue.DataInOutQueue"/>
    <bean id="PacketInOutQueueContract" class="artronics.chapar.queue.PacketInOutQueue"/>
    <bean id="ConnectionService" class="artronics.chapar.connection.serialPort.SerialPortConnection">
        <constructor-arg name="dataInOutQueue" ref="DataInOutQueueContract"></constructor-arg>
    </bean>


</beans>